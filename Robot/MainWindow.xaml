<Window x:Class="Robot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot"
        mc:Ignorable="d"
        Title="Robot" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <DockPanel.Background>
            <ImageBrush/>
        </DockPanel.Background>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <TextBlock Text="N moviments: " DockPanel.Dock="Left"/>
            <TextBlock Text="0" DockPanel.Dock="Left" Name="tbMoviments"/>
            
            <TextBlock Text="" DockPanel.Dock="Right" Name="tbPos2Jug"/>
            <TextBlock Text=" - Direccio 2on jug: " DockPanel.Dock="Right"/>
            
            <TextBlock Text="" DockPanel.Dock="Right" Name="tbPos1Jug"/>
            <TextBlock Text="Direccio 1r jug: " DockPanel.Dock="Right"/>
        </DockPanel>

        <Canvas Background="Gray" x:Name="canvas" DockPanel.Dock="Top" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center"></Canvas>
    </DockPanel>
</Window>
